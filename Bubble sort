import java.util.*;
public class Main
{
	public static void main(String[] args) {
		int arr[] = {5,3,1,2};
		int i,j;
		for(i=0;i<arr.length;i++)
		{
		    for(j=0;j<arr.length;j++)
		    {
		        //System.out.println(arr[i]+" "+arr[j]+" ");
		        if(arr[i]<arr[j])
		        {
		            int temp = arr[i];
		            arr[i] = arr[j];
		            arr[j] = temp;
		        }
		        
		    }
		}
		System.out.println(Arrays.toString(arr));
	}
}
